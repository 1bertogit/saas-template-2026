{
  "name": "saas-template-2026",
  "version": "1.1.0",
  "description": "Template SaaS completo com Next.js, Stripe, Clerk e toda stack 2026",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "type-check": "tsc --noEmit",
    "setup": "node scripts/setup.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "trigger:dev": "npx trigger.dev@latest dev",
    "validate": "npm run type-check && npm run lint && npm run test -- --run",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.710.0",
    "@aws-sdk/s3-request-presigner": "^3.710.0",
    "@clerk/nextjs": "^6.9.0",
    "@neondatabase/serverless": "^0.10.3",
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.2",
    "@react-email/components": "^1.0.4",
    "@sentry/nextjs": "^8.42.0",
    "@trigger.dev/nextjs": "^3.3.0",
    "@trigger.dev/sdk": "^3.3.0",
    "@upstash/ratelimit": "^2.0.5",
    "@upstash/redis": "^1.34.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.36.4",
    "lucide-react": "^0.468.0",
    "next": "^15.1.0",
    "next-intl": "^3.25.0",
    "next-themes": "^0.4.4",
    "openai": "^4.77.3",
    "posthog-js": "^1.179.3",
    "posthog-node": "^4.2.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-email": "^3.0.3",
    "resend": "^4.0.1",
    "sonner": "^1.7.1",
    "stripe": "^17.5.0",
    "svix": "^1.42.0",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.24.1"
  },
  "optionalDependencies": {
    "@ai-sdk/anthropic": "^1.0.6",
    "@ai-sdk/google": "^1.0.9",
    "@ai-sdk/openai": "^1.0.9",
    "ai": "^4.0.38"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.49.1",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.30.1",
    "eslint": "^9",
    "eslint-config-next": "^15.1.0",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "pg": "^8.11.3",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5",
    "vitest": "^2.1.8"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "bash -c 'npm run type-check'"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
